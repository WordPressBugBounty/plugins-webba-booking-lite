            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Operator"
        },
        "pricing_rule_number_of_timeslots_value": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Number of timeslots"
        },
        "pricing_rule_only_same_service": {
            "type": "string",
            "input_type": "textarea",
            "hidden": true,
