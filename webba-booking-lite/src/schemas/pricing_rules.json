{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "pricing_rule_name": {
            "type": "string",
            "input_type": "text",
            "hidden": false,
            "title": "Name"
        },
        "pricing_rule_priority": {
            "type": "string",
            "input_type": "select",
            "hidden": false,
            "title": "Priority"
        },
        "pricing_rule_type": {
            "type": "string",
            "input_type": "select",
            "hidden": false,
            "title": "Type"
        },
        "pricing_rule_date_range": {
            "type": "string",
            "input_type": "date_range",
            "hidden": true,
            "title": "Date range"
        },
        "pricing_rule_days_number": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Minimum number of days before the booked date"
        },
        "pricing_rule_custom_field_id": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Custom field ID"
        },
        "pricing_rule_custom_field_operator": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Operator"
        },
        "pricing_rule_custom_field_value": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Custom field value"
        },
        "pricing_rule_number_of_seats_operator": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Operator"
        },
        "pricing_rule_number_of_seats_value": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Number of seats"
