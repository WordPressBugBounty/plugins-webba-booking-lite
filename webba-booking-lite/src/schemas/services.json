        "service_priority": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Priority",
            "tab": "general",
            "misc": {
                "sub_type": "none_negative_integer",
                "tooltip": "If you have multiple services in one form, set the display priority by entering a priority number. A lower number indicates a higher priority."
