            "required": true,
            "dependency": [],
            "default_value": "0",
            "editable": true
        },
        "service_group_booking": {
            "type": "string",
            "input_type": "checkbox",
            "hidden": true,
            "title": "Enable group booking",
            "tab": "general",
            "misc": {
                "yes": "Yes",
                "tooltip": "If you accept group reservations, you can specify the minimum number of bookings required per time slot.",
                "description": "If you accept group reservations, you can specify the minimum number of bookings required per time slot and set the maximum number of bookings allowed per time slot by enable the option above."
            },
            "required": false,
            "dependency": [],
            "default_value": "",
            "editable": true
        },
        "service_min_quantity": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Minimum booking count per time slot",
            "tab": "general",
            "misc": {
                "tooltip": "If you accept group reservations, you can specify the minimum number of bookings required per time slot.",
                "sub_type": "positive_integer"
            },
            "required": true,
            "dependency": [
                [
                    "group_booking",
                    "=",
                    "yes"
                ]
            ],
            "default_value": "1",
            "editable": true
        },
        "service_quantity": {
            "type": "string",
            "input_type": "text",
            "hidden": true,
            "title": "Maximum booking count per time slot",
            "tab": "general",
            "misc": {
                "tooltip": "By default, one booking is allowed per time slot. If you accept group reservations, set the maximum number of bookings allowed per time slot.",
