            "type": "string",
            "input_type": "checkbox",
            "hidden": true,
            "title": "Consecutive time slots",
            "tab": "general",
            "misc": {
                "yes": "Yes",
                "tooltip": "When this option is enabled, the system allows customers to select only consecutive time slots."
            },
            "required": false,
            "dependency": [],
            "default_value": "",
            "editable": true
        },
        "service_form_builder": {
            "type": "string",
            "input_type": "select",
            "hidden": true,
            "title": "Form",
            "tab": "general",
            "misc": {
                "tooltip": "Select form to populate fields in booking form",
                "options": "forms",
                "null_value": [
                    "Default form"
                ]
            },
            "required": false,
            "dependency": [],
            "default_value": "0",
            "editable": true
        }
